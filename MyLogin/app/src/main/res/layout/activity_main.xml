<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:layout_width="match_parent"
    android:background="#9ba9bf"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login page"
        tools:layout_editor_absoluteX="161dp"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#6A4FB3"
        android:fontFamily="sans-serif-medium"

        tools:layout_editor_absoluteY="119dp" android:layout_marginBottom="16dp"/>



    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:background="@android:color/transparent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textColorHint="#88000000"
        android:padding="12dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Username"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="285dp" android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:background="@android:color/transparent"
        android:textColor="#000000"
        android:textColorHint="#88000000"
        android:padding="12dp"

        android:backgroundTint="#6A4FB3"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Password"

        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="375dp" android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:backgroundTint="#6A4FB3"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_button"

        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="477dp" />
</LinearLayout>